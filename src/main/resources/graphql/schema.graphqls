type Role {
  id: String!
  name: String!
  description: String!
}

type User {
  id: String!
  name: String!
  email: String!
  password: String!
  role: Role!
}

input UserDto {
  name: String!
  email: String!
  password: String!
  role: String!
}

input RoleDto {
  name: String!
  description: String!
}

type Query {
  hello: String
  getAllUsers: [User]
  getAllRoles: [Role]
}

type Mutation {
  createUser(createUserDto: UserDto!): User
  createRole(createRoleDto: RoleDto!): Role
}
